<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>로그인 합시다!</title>

<script type="text/javascript">
pw = document.getElementById("pass");
status = document.getElementById("logstatus");

function pwonfocus(){
	pw.value = "";
	pw.type = "password";
}
function pwonblur(){
	if (pw.value.trim().length < 1){
		pw.value = "비밀번호 입력";
		pw.type = "text";
		status.innerText = "비밀번호를 입력해주세요.";
	}
}
</script>

</head>
<body>
	<form action="login.html">
		<table border="1" align="center">
			<tr>
				<!-- 로그인 전 -->
				<td align="center">
					<input type="text" value="ID"/>
				</td>
			</tr>
			<tr>
				<td>
					<input id="pass" name="pass" type="text" value="비밀번호 입력" onfocus="pwonfocus()" onblur="pwonblur()">
				</td>
			<tr height="70px">
				<td>
					<span id="logstatus"></span>
				</td>
			</tr>
			<tr>
				<td><input type="submit" value="로그인" style="height: 50px;"></td>
			</tr>
			<tr>
				<td colspan="2" align="center">
					<input type="button" value="ID/PW찾기">
					<input type="button" value="회원가입"  onclick="Register.html">
				</td>
			</tr>
		</table>
	</form>
</body>
