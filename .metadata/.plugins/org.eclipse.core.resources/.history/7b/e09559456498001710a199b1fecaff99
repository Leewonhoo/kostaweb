<script type="text/javascript">
/*submit 요청 검증 함수*/
function sub_click(){
	var id = document.getElementById("memberId");
	var pw = document.getElementById("memberPw");
	var pwlength = pw.value.trim().length;
	if (id.value.trim().length == 0){
		id.focus();
		alert("입력");
		return false;
	}
	if ((pwlength<1) || (pwlength>4)){
		pw.focus();
		alert("길이틀림");
		return false;
	} else if (isNaN(pw.value.trim())){
		pw.focus();
		alert("숫자입력");
		return false;
	}
	alert("전송~");
	return true;
}
/*type image > submit AND reset*/
function image_click(){
	var id = document.getElementById("memberId");
	var pw = document.getElementById("memberPw");
	var pwlength = pw.value.trim().length;
	if (id.value.trim().length == 0){
		id.focus();
		alert("입력");
		return false;
	}
	if ((pwlength<1) || (pwlength>4)){
		pw.focus();
		alert("길이틀림");
		return false;
	} else if (isNaN(pw.value.trim())){
		pw.focus();
		alert("숫자입력");
		return false;
	}
	alert("전송~");
	return true;
}
function image_reset(){
	document.loginForm.reset();
	return false;
}
/*버튼, img, A submit AND reset*/
function button_click(){
	var id = document.getElementById("memberId");
	var pw = document.getElementById("memberPw");
	var pwlength = pw.value.trim().length;
	if (id.value.trim().length == 0){
		id.focus();
		alert("입력");
		return;
	}
	if ((pwlength<1) || (pwlength>4)){
		pw.focus();
		alert("길이틀림");
		return;
	} else if (isNaN(pw.value.trim())){
		pw.focus();
		alert("숫자입력");
		return;
	}
	alert("전송~");
	document.loginForm.submit();
}
function button_reset(){
	document.loginForm.reset();
}
</script>

